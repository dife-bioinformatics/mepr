{
  "branches": "main",
  "tagFormat": "${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "Rscript -e 'desc::desc_set_version(version = \"${nextRelease.version}\")'"
      }
    ],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): set Description file to ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "draftRelease": true
      }
    ]
  ]
}
